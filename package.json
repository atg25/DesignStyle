{
  "name": "mcm-design-hub",
  "version": "1.0.0",
  "description": "Mid-Century Modern Design Hub - Educational platform for MCM design principles",
  "main": "index.js",
  "scripts": {
    "build": "eleventy",
    "dev": "eleventy --serve --watch --port=8080",
    "serve": "eleventy --serve",
    "start": "npm run dev",
    "clean": "rm -rf _site",
    "deploy": "npm run build && gh-pages -d _site",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:md",
    "lint:js": "eslint \"src/**/*.js\"",
    "lint:css": "echo 'CSS linting placeholder'",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules --ignore _site",
    "format": "prettier --write \"**/*.{js,json,md,njk,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,njk,css}\"",
    "prepare": "husky",
    "test": "npm run lint && npm run format:check && npm run build"
  },
  "lint-staged": {
    "*.js": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{json,md,njk}": [
      "npx prettier --write"
    ],
    "*.css": [
      "npx prettier --write"
    ],
    "*.md": [
      "npx markdownlint --fix"
    ]
  },
  "keywords": [
    "eleventy",
    "nunjucks",
    "mid-century-modern",
    "design-education",
    "static-site",
    "github-pages"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "gh-pages": "^6.1.0",
    "globals": "^16.5.0",
    "markdown-it": "^14.1.0"
  }
}
