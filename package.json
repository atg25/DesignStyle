{
  "name": "mcm-design-hub",
  "version": "1.0.0",
  "description": "Mid-Century Modern Design Hub - Educational platform for MCM design principles",
  "main": "index.js",
  "scripts": {
    "build": "eleventy",
    "build:prod": "PATH_PREFIX=/DesignStyle/ eleventy",
    "dev": "eleventy --serve --watch --port=8080",
    "serve": "eleventy --serve",
    "start": "npm run dev",
    "clean": "rm -rf _site",
    "deploy": "npm run build && gh-pages -d _site",
    "optimize:images": "node scripts/optimize-images.js",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:md",
    "lint:js": "eslint \"src/**/*.js\"",
    "lint:css": "stylelint \"src/**/*.css\"",
    "lint:md": "markdownlint \"**/*.md\" --ignore node_modules --ignore _site",
    "format": "prettier --write \"**/*.{js,json,md,njk,css}\"",
    "format:check": "prettier --check \"**/*.{js,json,md,njk,css}\"",
    "prepare": "husky",
    "test": "npm run lint && npm run format:check && npm run build",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed"
  },
  "lint-staged": {
    "*.js": [
      "npx eslint --fix",
      "npx prettier --write"
    ],
    "*.{json,md,njk}": [
      "npx prettier --write"
    ],
    "*.css": [
      "npx prettier --write"
    ],
    "*.md": [
      "npx markdownlint --fix"
    ]
  },
  "keywords": [
    "eleventy",
    "nunjucks",
    "mid-century-modern",
    "design-education",
    "static-site",
    "github-pages"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.57.0",
    "@types/node": "^24.10.1",
    "eslint": "^9.17.0",
    "gh-pages": "^6.1.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lighthouse": "^13.0.1",
    "lint-staged": "^16.2.6",
    "markdown-it": "^14.1.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2",
    "sharp": "^0.34.5",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1"
  },
  "dependencies": {
    "tslib": "^2.8.1"
  }
}
