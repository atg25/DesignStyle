    "design-education",
    "static-site",
    "github-pages"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "@11ty/eleventy": "^3.0.0",
    "gh-pages": "^6.1.0",
    "markdown-it": "^14.1.0"
  }
}
