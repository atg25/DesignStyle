{
  "name": "mcm-design-hub",
  "version": "1.0.0",
  "description": "Mid-Century Modern Design Hub - Educational platform for MCM design principles",
  "main": "index.js",
  "scripts": {
    "build": "eleventy",
    "dev": "eleventy --serve --watch --port=8080",
