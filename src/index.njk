{# ============================================
   NEWSLETTER CTA
   ============================================ #}
<section class="section newsletter">
  <div class="container container--narrow">
    <div class="newsletter__card">
      <div class="newsletter__icon">
        {{ icon(name="mail", size="48") }}
      </div>
      
      <h2 class="newsletter__title">Stay Inspired</h2>
      <p class="newsletter__description">
        Get weekly lessons, design inspiration, and tool updates delivered to your inbox.
      </p>
      
      <form class="newsletter__form" data-newsletter-form>
        <div class="form-group">
          <label for="email" class="sr-only">Email address</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            class="form-input" 
            placeholder="your@email.com"
            required
            autocomplete="email"
          >
        </div>
        <button type="submit" class="btn btn--primary btn--lg">
          Subscribe
          {{ icon(name="arrow-right", size="20") }}
        </button>
      </form>
      
      <p class="newsletter__privacy text-xs text-tertiary">
        No spam, ever. Unsubscribe anytime. Read our 
        <a href="/privacy">privacy policy</a>.
      </p>
    </div>
  </div>
</section>
